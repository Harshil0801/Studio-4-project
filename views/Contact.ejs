<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - NZ College of Education</title>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #e6ecff, #f9fbff);
            color: #333;
        }

        /* Navbar */
        .navbar-container {
            background-color: #003366;
            padding: 10px 0;
            text-align: center;
        }

        .main-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
        }

        .logo-container {
            text-align: center;
        }

        .logo {
            width: 100px;
            height: auto;
        }

        .college-name {
            font-size: 2.5rem;
            font-weight: bold;
            color: #003366;
            margin-top: 10px;
        }

        .contact-wrapper {
            background-color: #ffffff;
            max-width: 650px;
            width: 100%;
            padding: 30px 40px;
            margin-top: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        .contact-wrapper h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #004080;
            font-size: 1.8rem;
        }

        .contact-wrapper label {
            display: block;
            margin-top: 15px;
            font-weight: 600;
        }

        .contact-wrapper input,
        .contact-wrapper textarea {
            width: 100%;
            padding: 12px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #f9f9f9;
        }

        .contact-wrapper input::placeholder,
        .contact-wrapper textarea::placeholder {
            color: #888;
            font-size: 0.95rem;
        }

        .contact-wrapper textarea {
            resize: vertical;
            height: 120px;
        }

        .contact-wrapper button {
            width: 100%;
            margin-top: 20px;
            padding: 14px;
            font-size: 1.1rem;
            font-weight: bold;
            color: white;
            background: linear-gradient(to right, #0066cc, #004080);
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .contact-wrapper button:hover {
            background: linear-gradient(to right, #004080, #00264d);
        }

        footer {
            margin-top: 50px;
            padding: 15px 0;
            background-color: #003366;
            text-align: center;
            color: white;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <!-- Navbar at the Top -->
    <div class="navbar-container">
        <%- include('partials/navbar1.ejs') %>
    </div>

    <!-- Main Content -->
    <div class="main-section">

        <!-- Logo and College Name -->
        <div class="logo-container">
            <img src="/public/css/images/logo.png" alt="NZ College Logo" class="logo">
            <h1 class="college-name">NZ College of Education</h1>
        </div>

        <!-- Contact Form Section -->
        <div class="contact-wrapper">
            <h2>Contact Us</h2>
            <form action="/contact" method="POST">
                <label for="name">Full Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter your full name" required>

                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required>

                <label for="message">Your Message:</label>
                <textarea id="message" name="message" placeholder="Type your message here..." required></textarea>

                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

</body>
</html>
