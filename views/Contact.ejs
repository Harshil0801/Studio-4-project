<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include header partial -->
    <%- include('partials/header.ejs') %>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f9fc;
            color: #333;
        }

        /* Header Section */
        .header {
            background-color: #0044cc;
            color: white;
            padding: 20px 0;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .header marquee {
            font-size: 1.1rem;
            background-color: #f7b731;
            padding: 10px 0;
            margin-top: 10px;
        }

        .main-content {
            padding: 50px 20px;
        }

        /* Logo and college name */
        h1#headerid {
            font-size: 2.8rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Navbar Styles */
        nav {
            text-align: center;
            background-color: #2c3e50;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 30px;
        }

        nav a {
            color: white;
            text-decoration: none;
            margin: 0 20px;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: #f7b731;
        }

        /* Contact Form Styles */
        .contact-form {
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 0 auto;
            font-size: 1rem;
        }

        .contact-form h2 {
            text-align: center;
            font-size: 2.2rem;
            color: #333;
            margin-bottom: 20px;
        }

        .contact-form label {
            display: block;
            font-size: 1.1rem;
            margin: 12px 0 5px;
            color: #555;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1rem;
            color: #333;
        }

        .contact-form button {
            width: 100%;
            padding: 14px;
            background-color: #0044cc;
            color: white;
            font-size: 1.2rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .contact-form button:hover {
            background-color: #f7b731;
        }

        footer {
            background-color: #2c3e50;
            color: white;
            padding: 20px 0;
            text-align: center;
            font-size: 1rem;
            margin-top: 40px;
        }

        /* Responsive Design for Small Screens */
        @media (max-width: 768px) {
            h1#headerid {
                font-size: 2.2rem;
            }

            nav a {
                font-size: 1rem;
            }

            .contact-form {
                padding: 20px;
            }
        }
    </style>
</head>
<body>

<!-- Header Section -->
<div class="header">
    <div class="container">
        <!-- Display news updates -->
        <b>NEWS:</b>
        <marquee>
            Updates on clubs, organizations, and extracurricular activities, as well as stories about student achievements and accomplishments.
        </marquee>
    </div>
</div>

<!-- Main Content Section -->
<div class="main-content">
    <div class="container">
        <!-- College name -->
        <h1 id="headerid">RD College of Education Auckland</h1>

        <!-- Include navbar partial -->
        <%- include('partials/navbar1.ejs') %>
    </div>
</div>

<!-- Contact Form Section -->
<div class="main-content">
    <div class="container">
        <div class="contact-form">
            <h2>Contact Us</h2>
            <form action="/contact" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="message">Message:</label>
                <textarea id="message" name="message" required></textarea>

                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
</div>

<!-- Footer Section -->
<%- include('partials/footer.ejs') %>

</body>
</html>
